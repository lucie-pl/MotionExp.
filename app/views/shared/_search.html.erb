<div class="div mb-4">
  <div class="row justify-content-center">
    <div class="search col-sm-8 my-3">
      <div class="icon">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>

      <%= form_with url: path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find movies, directors, actors, ..."
          %>
        <%#= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
